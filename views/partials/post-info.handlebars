<article class="post">
    <div class="title card-header tournament-header">
        <a href="/tournament/{{id}}">{{game.title}}: {{title}}</a>
        <span>Posted by {{user.username}} on {{format_date created_at}}</span>
        <div class="card-subheader">
            Prize Pool: ${{prize_pool}}
            <span>
                Start Date: {{format_date start_date}}
            </span>
        </div>
    </div>

    <div class="meta card-body">
        {{tournament_description}}
        <span class="comment-count"><a href="/tournament/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a></span>
    </div>
</article>